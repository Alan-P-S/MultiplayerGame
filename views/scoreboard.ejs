<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Live Leaderboard</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<style>
body {
    margin: 0;
    font-family: "Segoe UI", sans-serif;
    background: radial-gradient(circle at top, #1a1f3c, #050610);
    color: #fff;
}

header {
    text-align: center;
    padding: 20px;
    background: linear-gradient(90deg, #ff4b2b, #ff416c);
}

.container {
    max-width: 800px;
    margin: 30px auto;
    padding: 0 15px;
}

table {
    width: 100%;
    border-collapse: collapse;
    background: rgba(255,255,255,0.05);
    border-radius: 12px;
    overflow: hidden;
}

th, td {
    padding: 14px;
    text-align: center;
}

th {
    color: #ffcc00;
}

tr:nth-child(even) {
    background: rgba(255,255,255,0.04);
}

.rank { color: #00ffd5; font-weight: bold; }
.health { color: #4cff4c; }
.deaths { color: #ff5c5c; }
</style>
</head>

<body>

<header>
    <h1>ðŸŽ® LIVE SCOREBOARD</h1>
    <p>Least Deaths Rank Higher</p>
</header>

<div class="container">
<table>
<thead>
<tr>
    <th>Rank</th>
    <th>Player</th>
    <th>Health</th>
    <th>Deaths</th>
</tr>
</thead>
<tbody id="leaderboard"></tbody>
</table>
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
const socket = io();

/*
  Players stored like:
  players[id] = { id, name, health, death }
*/
const players = {};

socket.on("players", data => {
    // Update or insert player
    players[data.id] = {
        id: data.id,
        name: data.name,
        health: data.health,
        death: data.death
    };

    renderLeaderboard();
});

function renderLeaderboard() {
    const tbody = document.getElementById("leaderboard");
    tbody.innerHTML = "";

    // Convert object -> array
    const sortedPlayers = Object.values(players)
        .sort((a, b) => a.death - b.death);

    sortedPlayers.forEach((player, index) => {
        const row = document.createElement("tr");

        row.innerHTML = `
            <td class="rank">#${index + 1}</td>
            <td>${player.name}</td>
            <td class="health">${player.health}</td>
            <td class="deaths">${player.death}</td>
        `;

        tbody.appendChild(row);
    });
}
</script>

</body>
</html>
